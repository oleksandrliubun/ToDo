@model ToDo.Models.TaskViewModels.TaskViewModel
@{
    ViewData["Title"] = "Edit Task";
}

<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-4">
        <section>
            <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group mb-3">
                    <div class="checkbox">
                        <label asp-for="DueDate">
                            <input asp-for="DueDate" />
                            @Html.DisplayNameFor(m => m.DueDate)
                        </label>
                    </div>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <div class="checkbox">
                        <label asp-for="IsCompleted">
                            <input asp-for="IsCompleted" />
                            @Html.DisplayNameFor(m => m.IsCompleted)
                        </label>
                    </div>
                </div>
                <div class="form-group mb-3">
                    <div class="checkbox">
                        <label asp-for="IsImportant">
                            <input asp-for="IsImportant" />
                            @Html.DisplayNameFor(m => m.IsImportant)
                        </label>
                    </div>
                </div>
                <div class="form-group mb-3">
                    <button type="submit" class="w-100 btn btn-lg btn-primary">Edit</button>
                </div>
            </form>
        </section>
    </div>
</div>